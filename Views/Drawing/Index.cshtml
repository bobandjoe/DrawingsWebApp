
@model IEnumerable<Drawing>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Drawing</h1>

<table class="table table-bordered table-striped" style="width:100%">   
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Image
            </th>
            <th>
                Comment
            </th>
            <th>
                Date and Time Uploaded
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.FileName
                </td>
                <td width="20%">
                    @obj.Image
                </td>
                <td width="40%">
                    @obj.Comment
                </td>
                <td width="25%">
                    @obj.UploadedDateTime
                </td>
            </tr>
        }
    </tbody>
</table>

