
@model IEnumerable<Drawing>
@{
    ViewData["Title"] = "Index";
}

<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Drawings</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Drawing" asp-action="Upload" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Upload Drawing
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">   
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Image
            </th>
            <th>
                Comment
            </th>
            <th>
                Date and Time Uploaded
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.FileName
                </td>
                <td width="20%">
                    @obj.Image
                </td>
                <td width="30%">
                    @obj.Comment
                </td>
                <td width="25%">
                    @obj.UploadedDateTime
                </td>
            </tr>
        }
    </tbody>
</table>

