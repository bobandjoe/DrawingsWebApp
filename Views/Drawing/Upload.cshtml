@model Drawing

<form method="post" enctype="multipart/form-data" asp-action="Upload">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">Upload Drawing</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FileName"></label>
            <input asp-for="FileName" class="form-control" />
            <span asp-validation-for="FileName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FormImage"></label>
            <input asp-for="FormImage" class="form-control" type="file" />
            <span asp-validation-for="FormImage" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Upload</button>
        <a asp-controller="Drawing" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Drawings
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

