@model DrawingVm

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">Upload Drawing</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FileName"></label>
            <input asp-for="FileName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" type="file"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Upload</button>
        <a asp-controller="Drawing" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Drawings
        </a>
    </div>
</form>

